<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MyActionButtonOverflow" parent="android:style/Widget.Holo.Light">
        <item name="android:src">@drawable/more</item>
        <item name="android:icon">@drawable/sun</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">36dip</item>
        <item name="android:titleMarginTop">36dp</item>
    </style>

    <style name="MyActionButtonOverflowDark" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:src">@drawable/more_dark</item>
        <item name="android:icon">@drawable/light_toggle</item>
        <item name="overlapAnchor">false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>