        <item name="bottomNavigation">@drawable/textlines</item>
        <item name="android:actionOverflowButtonStyle">@style/MyActionButtonOverflowDark</item>
    </style>

    <style name="BottomNavTheme" parent="Widget.Design.BottomNavigationView">
        <item name="android:itemBackground">@color/bottomNav</item>
    </style>

    <style name="BottomNavThemeDark" parent="Widget.Design.BottomNavigationView">
