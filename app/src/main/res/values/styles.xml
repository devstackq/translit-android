        <item name="overlapAnchor"> false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>


    <style name="MyActionButtonOverflowDark"  parent="ThemeOverlay.AppCompat.Light">
        <item name="android:src">@drawable/more_dark</item>
        <item name="android:icon">@drawable/light_toggle</item>
        <item name="overlapAnchor"> false</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">12dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="bgtoolbar"> @color/bottomNavD</item>
        <item name="backgroundImage"> @drawable/dark_bg</item>
        <item name="toggle_theme"> @drawable/sun</item>
        <item name="arrow"> @drawable/arrow_dark</item>
        <item name="sendBtn"> @drawable/send_dark</item>
        <item name="titleTextColor">@color/titleTextColorD</item>
        <item name="colorPrimary" >@color/editTextD</item>
        <item name="editTextColor">@color/editTextColorD</item>
        <item name="colorPrimaryDark">#DB7517</item>
        <item name="colorAccent">@color/colorAccent</item>
