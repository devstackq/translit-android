    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="titleTextColor">@color/titleTextColor</item>u
        <item name="colorPrimary" >@color/editText</item>
        <item name="editTextColor">@color/editTextColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextStyle">@color/titleStyle</item>
        <item name="editTextBackground">@color/editText</item>
        <item name="backgroundColor">@color/textView2</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:text">@color/textView2</item>
        <item name="android:navigationIcon">@color/defaultColor</item>
        <item name="bottomNavigation">@drawable/textline_white</item>
